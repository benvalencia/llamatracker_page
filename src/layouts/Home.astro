<style>
    .home {
        height: 100vh;
        overflow: hidden;
    }
    .home-container {
    }

    .home-container-text {
        display: flex;
        flex-direction: column;
    }

    .home-container-main {
        margin-top: 9rem;
        margin-bottom: 3rem;
    }

    .home-container-secondary {
        width: 100%;
        height: 40rem;
        display: flex;
        align-content: center;
        align-items: center;
        justify-content: space-between;
    }

    .home-container-tertiary {
        display: flex;
        position: relative;
        top: -52rem;
        justify-content: center;
    }

    h1 {
        font-size: 5rem;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        margin: 0;
    }
    h2 {
        font-size: 4.5rem;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        margin: 0;
    }

    h3 {
        font-size: 2.5rem;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        margin: 0;
    }
    h4 {
        font-size: 2rem;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        margin: 0;
    }

    .text-gradient {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }
</style>
