---
import Layout from '../layouts/Layout.astro';
import Home from "../layouts/Home.astro";
import About from "../layouts/About.astro";
import Feature from "../layouts/Feature.astro";
import Download from "../layouts/Download.astro";
---

<Layout title="Llamatracker">
	<main>
		<div id="home"></div>
		<Home></Home>
		<div id="features"></div>
		<Feature></Feature>
		<div id="about"></div>
		<About></About>
		<div id="download"></div>
		<Download appleButton={true}></Download>
	</main>
</Layout>

<style>
	main {
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	html {
		scroll-behavior: smooth;
	}
</style>
