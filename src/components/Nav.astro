---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<div class="nav-menu">
	<div class="nav-menu-container">
		<div class="nav-menu-container-img">
			<img src="/img/fortnite-llama-480.png"
					 width="60" height="60"
					 alt="llamatracker logo"/>
			<div class="nav-menu-container-img-text">
				Llamatracker
			</div>
		</div>
		<div class="nav-menu-container-nav">
			<nav class="nav-menu-container-nav-content">
				<a href="#">Home</a>
				<a href="#">Features</a>
				<a href="#">Roadmap</a>
				<a href="#">Testimonials</a>
			</nav>
		</div>
		<div class="nav-menu-container-actions">
			<!--TODO: boton para ir a la pagina de app.llamatracker.com-->
			<div class="nav-menu-container-actions-download">Download</div>
		</div>
	</div>
</div>

<style>
	.nav-menu {
		width: 100%;
		position: fixed;
		padding: 10px;
		z-index: 999999;
	}

	.nav-menu-container {
		max-width: 1200px;
		margin: auto;
		display: flex;
		justify-content: space-between;
	}

	.nav-menu-container-img {
		display: flex;
		gap: 10px;
	}

	.nav-menu-container-img-text {
		color: white;
		align-content: center;
	}
	.nav-menu-container-nav {
		align-content: center;
	}

	.nav-menu-container-nav-content {
		padding: 4px 8px;
		display: flex;
		gap: 15px;
		border-radius: 8px;
		background: rgba(255, 255, 255, .3);
		-webkit-backdrop-filter: blur(5px);
		backdrop-filter: blur(5px);
		border: 1px solid rgba(209, 213, 219, 0.3);
		height: auto;
	}

	.nav-menu-container-nav-content > a{
		align-content: center;
		padding: 10px 25px;
		color: black;
		text-decoration: none;
	}

	.nav-menu-container-actions {
		align-content: center;
	}

	.nav-menu-container-actions-download {
		padding: 5px 25px;
		border-radius: 8px;
		background: #4c51f7;
		height: 30px;
		align-content: center;
		color: white;
	}

	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
