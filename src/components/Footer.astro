---
import AppleDownloadButton from "./AppleDownloadButton.astro";
import AndroidDownloadButton from "./AndroidDownloadButton.astro";
import {getLangFromUrl, useTranslations} from "../utils/i18n/utils";
interface Props {
	appleButton?: boolean,
	androidButton?: boolean
}
const currentLang = Astro.currentLocale || 'es';

const { 
	appleButton,
	androidButton
} = Astro.props;

const redirectRef: any = {
	en: {
		home: '#home',
		features: '#features',
		about: '#about',
		download: '#download',
		searchProfile: "#search-profile",
		statsDetail: "#stats-detail",
		dailyShop: "#daily-shop",
		officialNews: "#official-news",
	},
	es: {
		home: '#inicio',
		features: '#funcionalidades',
		about: '#sobre',
		download: '#descargar',
		searchProfile: "#buscador-perfil",
		statsDetail: "#estadisticas-detalladas",
		dailyShop: "#tienda-diaria",
		officialNews: "#noticias-oficiales",
	},
	it: {
		home: '#casa',
		features: '#funzionalita',
		about: '#di',
		download: '#scaricamento',
		searchProfile: "#cerca-profilo",
		statsDetail: "#statistiche",
		dailyShop: "#negozio-giornaliero",
		officialNews: "#notizie-ufficiale",
	},
	ca: {
		home: '#inici',
		features: '#funcionalitats',
		about: '#sobre',
		download: '#descarregar',
		searchProfile: "#cercar-profil",
		statsDetail: "#estadistiques",
		dailyShop: "#botiga-diaria",
		officialNews: "#noticies-oficials",
	},
}
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
