					<h4 class="text-xl text-purple-500 font-medium mb-7">Llamatracker</h4>
					<ul class=" transition-all duration-500">
						<li class="mb-6">
							<a href={redirectRef[lang].home} class="text-gray-600 hover:text-gray-300">
							{t("footer.footer.home")}
							</a>
						</li>
						<li class="mb-6"><a href={redirectRef[lang].features} class=" text-gray-600 hover:text-gray-300">
							{t("footer.footer.features")}
