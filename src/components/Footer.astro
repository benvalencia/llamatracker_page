<footer class="w-full">
	<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
		<!--Grid-->
		<div class="flex flex-col xl:flex-row gap-8 pt-14 pb-14">
			<div class="w-full xl:max-w-[365px] max-xl:mb-8">
				<a href="#"
					 class="flex justify-center sm:justify-start border-b border-gray-200 mb-5 pb-5">
					<div class="flex items-center	gap-4">
						<div class="container-logo"></div>
						<p class="text-2xl text-white	">Llamatracker</p>
					</div>
				</a>
				
				<div class="flex max-xl:items-center max-xl:justify-between flex-col sm:flex-row xl:flex-col">
					<p class="text-gray-500 mb-5 text-center lg:text-left">
						{t("footer.download.download")}
					</p>
					<div class="flex max-xl:items-center gap-2 items-baseline xl:flex-col">
						{appleButton ?
							<a href="javascript:;" class=" flex justify-center lg:justify-start group w-max">
								<AppleDownloadButton size="s"></AppleDownloadButton>
							</a>
							: null
