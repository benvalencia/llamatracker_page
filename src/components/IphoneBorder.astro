---
interface Props {
	section: 'home' | 'stats' | 'stats-detail' | 'news' | 'news-detail' | 'shop' | 'shop-detail' | 'tools' | 'user-profile';
	size: 'xs' | 's' | 'm' | 'l' | 'xl';
}

const { 
	section, size
} = Astro.props;
---

<div class="relative md:w-72 h-[448px] md:h-[600px] rounded-[25px] md:rounded-[45px] shadow-[0_0_2px_2px_rgba(255,255,255,0.1)] border-4 md:border-8 border-zinc-900 ml-1"
		 class:list={[`${size == 'xs' ? 'md:h-[567px]' : null }`]}
>
	<!-- Dynamic Island -->
	<div class="absolute top-2 left-1/2 transform -translate-x-1/2 w-[65px] md:w-[90px] h-[16px] md:h-[22px] bg-zinc-900 rounded-full z-20 hidden md:block">
	</div>

	<div class="absolute -inset-[1px] border-[3px] border-zinc-700 border-opacity-40 rounded-[22px] md:rounded-[37px] pointer-events-none"></div>


	<!-- Screen Content -->
	<div class="relative w-full h-full  rounded-[22px] md:rounded-[37px] overflow-hidden flex items-center justify-center  bg-zinc-900/10">
		<div class="iphone w-full" class:list={['iphone', `iphone-${size}`]}>
			<div class="w-full h-10 bg-cover w-[218px] md:w-auto h-[467px] md:h-[600px]" class:list={['iphone-14', `section-${section}`]}></div>
		</div>
		
		<div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 h-24 w-12 bg-zinc-600 blur-[60px]">
		</div>
	</div>

	<!-- Left Side Buttons -->
	<!-- Silent Switch -->
	<div class="absolute left-[-12px] top-20 w-[6px] h-8 bg-zinc-900 rounded-l-md shadow-md"></div>

	<!-- Volume Up -->
	<div class="absolute left-[-12px] top-36 w-[6px] h-12 bg-zinc-900 rounded-l-md shadow-md"></div>

	<!-- Volume Down -->
	<div class="absolute left-[-12px] top-52 w-[6px] h-12 bg-zinc-900 rounded-l-md shadow-md"></div>

	<!-- Right Side Button (Power) -->
	<div class="absolute right-[-12px] top-36 w-[6px] h-16 bg-zinc-900 rounded-r-md shadow-md"></div>
</div>

<style>
	.container {
		background: #13151a;
	}


	.size-s{
		width: 274px !important;
		height: 590px !important;
		background-size: 275px 591px !important;
		border-radius: 25px;
	}

	.size-m{
		width: 370px !important;
		height: 770px !important;
		background-size: 371px 771px !important;
		border-radius: 32px;
	}

	.size-l{
		width: 470px !important;
		height: 950px !important;
		background-size: 471px 951px !important;
		border-radius: 38px;
	}

	.size-xl{
		width: 570px !important;
		height: 1280px !important;
		background-size: 571px 1281px !important;
		border-radius: 38px;
	}

	.section-home{
		background-image: url('/img/screens/home_screen.png');
	}
	.section-stats{
		background-image: url('/public/img/screens/stats_screen.png');
	}
	.section-stats-detail{
		background-image: url('/public/img/screens/stats-detail_screen.png');
	}
	.section-user-profile{
		background-image: url('/public/img/screens/home_screen.png');
	}
	.section-loading{
		background-image: url('/public/img/screens/home_screen.png');
	}
	.section-news{
		background-image: url('/public/img/screens/news_screen.png');
	}
	.section-news-detail{
		background-image: url('/public/img/screens/news-detail_screen.png');
	}
	.section-shop{
		background-image: url('/public/img/screens/shop_screen.png');
	}
	.section-shop-detail{
		background-image: url('/public/img/screens/shop-detail_screen.png');
	}
	.section-tools{
		background-image: url('/public/img/screens/home_screen.png');
	}
</style>
